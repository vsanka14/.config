{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "background": "#24283b",
          "foreground": "#7aa2f7",
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b4",
          "style": "diamond",
          "template": " {{ .Path }} ",
          "options": {
            "style": "short"
          },
          "type": "path"
        },
        {
          "foreground": "#bb9af7",
          "style": "plain",
          "template": " {{ .HEAD }}{{ if or .Working.Changed .Staging.Changed }} <#e0af68>*</>{{ end }}",
          "options": {
            "fetch_status": true
          },
          "type": "git"
        },
        {
          "foreground": "#9ece6a",
          "foreground_templates": ["{{ if gt .Code 0 }}#f7768e{{ end }}"],
          "style": "plain",
          "template": " \u276f ",
          "options": {
            "always_enabled": true
          },
          "type": "status"
        }
      ],
      "type": "prompt"
    }
  ],
  "transient_prompt": {
    "foreground": "#565f89",
    "template": "\u276f "
  },
  "version": 4
}
